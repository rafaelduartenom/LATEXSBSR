\pagestyle{empty}
\linespread{1}
\sloppy
\flushbottom
\hyphenpenalty=100000

\makeatletter

% titulo
\def\address#1{\def\@address{#1}}
\def\maketitle
{
	\begin{center}
		{\bf \@title}
		\vskip 1em
		\@author
		\vskip 1em
		\@address
	\end{center}
}

% abstract, resumo e keywords
\ifthenelse{\isundefined{\palavraschave}}{\def\@palavraschave{.}}{}
\def\palavraschave#1#2#3{\def\@palavraschave{#1, #2, #3}}
\ifthenelse{\isundefined{\keywords}}{\def\@keywords{}}{}
\def\keywords#1#2#3{\def\@keywords{#1, #2, #3}}
\newenvironment{resumo}{\small \noindent {\bf Resumo.}}{\\ \ \\ {\bf Palavras-chave:} \@palavraschave~\@keywords \normalsize}
\renewenvironment{abstract}{\small \noindent {\bf Abstract.}}{\\ \ \\ {\bf Keywords:} \@keywords~\@palavraschave \normalsize}

% seções
\renewcommand\section{\@startsection{section}{2}{0pt}{\baselineskip}{1pt}{\bf}}
\renewcommand\subsection{\@startsection{subsection}{2}{0pt}{\baselineskip}{1pt}{\bf}}
\RequirePackage{titlesec}
\titlelabel{\thetitle.\hspace{1ex}}
\usepackage{titlesec}

\setcounter{secnumdepth}{4}

\titleformat{\paragraph}
{\normalfont\normalsize\bfseries}{\theparagraph}{1em}{}
\titlespacing*{\paragraph}
{0pt}{3.25ex plus 1ex minus .2ex}{1.5ex plus .2ex}
